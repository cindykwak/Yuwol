<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginHorizontal="2dp">



    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>
    <ImageView
        android:id="@+id/rating_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
    android:id="@+id/rating_rank"
    android:layout_width="13dp"
    android:layout_height="13dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="4dp"
    android:text="1"
    android:textStyle="bold"
    android:textSize="10sp"
    android:textColor="@color/white"
    android:background="@drawable/bg_chart_rank"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="@+id/rating_cover"
    app:layout_constraintTop_toTopOf="@+id/rating_cover"/>


    <TextView
        android:id="@+id/rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="title"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/rating_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artist"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="@id/rating_title"
        app:layout_constraintTop_toBottomOf="@id/rating_title" />

    <RatingBar
        android:id="@+id/rb_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/rating_cover"
        app:layout_constraintTop_toBottomOf="@+id/rating_artist"
        android:numStars="5"
        android:stepSize="0.5"
        android:scaleX="0.6"
        android:scaleY="0.6"
        />
