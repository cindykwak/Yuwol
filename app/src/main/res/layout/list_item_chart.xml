<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_chart_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintTop_toBottomOf="@id/iv_chart_cover"
        app:layout_constraintStart_toStartOf="@id/iv_chart_cover"/>

    <TextView
        android:id="@+id/tv_chart_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artist"
        app:layout_constraintTop_toBottomOf="@id/tv_chart_title"
        app:layout_constraintStart_toStartOf="@id/tv_chart_title"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가창 난이도 ★"
        app:layout_constraintTop_toBottomOf="@id/tv_chart_artist"
        app:layout_constraintStart_toStartOf="@id/tv_chart_artist"/>

     <TextView
        android:id="@+id/tv_chart_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/tv_chart_artist"
        app:layout_constraintStart_toEndOf="@id/textView"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고음 ★"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"/>

    <TextView
        android:id="@+id/tv_chart_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/textView2"/>

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:background="@color/black"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/tv_chart_high"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="흥 ★"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/view"/>

    <TextView
        android:id="@+id/tv_chart_excitement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/textView3"/>

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/black"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/tv_chart_excitement"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="랩 ★"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/view2"/>

    <TextView
        android:id="@+id/tv_chart_rap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/textView4"/>

</androidx.constraintlayout.widget.ConstraintLayout>