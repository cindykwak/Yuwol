<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp"
    android:background="@drawable/bg_rectangle_mylist">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_my_singlist"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_my_singlist_cover"
            android:layout_width="55dp"
            android:layout_height="55dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_item_my_singlist"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_item_my_singlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/suit"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_item_my_singlist_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Artist"
            android:textColor="@color/gray_300"
            android:fontFamily="@font/suit"
            android:textSize="11sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가창 난이도 ★"
                android:textSize="9sp"
                android:fontFamily="@font/suit"
                android:textColor="@color/pink_50"/>

            <TextView
                android:id="@+id/tv_item_my_singlist_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="9sp"
                android:fontFamily="@font/suit"
                android:textColor="@color/pink_50"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="분위기 "
                android:fontFamily="@font/suit"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_my_singlist_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:fontFamily="@font/suit"
                android:textSize="9sp"
                android:textColor="@color/pink_50"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/iv_item_my_singlist_bookmark"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_like2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>