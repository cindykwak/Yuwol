<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_my_singlist"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="2dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/iv_item_my_singlist_cover"
            android:layout_width="55dp"
            android:layout_height="55dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_item_my_singlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_item_my_singlist_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="11sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가창 난이도 ★"
                android:textSize="9sp"
                android:textColor="@color/pink_100"/>

            <TextView
                android:id="@+id/tv_item_my_singlist_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="9sp"
                android:textColor="@color/pink_100"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="분위기 "
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_my_singlist_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:textSize="9sp"
                android:textColor="@color/pink_100"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/iv_item_my_singlist_bookmark"
        android:layout_width="24dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_bookmark"
        android:layout_gravity="center"
        android:backgroundTint="@color/pink_100"/>

</androidx.appcompat.widget.LinearLayoutCompat>