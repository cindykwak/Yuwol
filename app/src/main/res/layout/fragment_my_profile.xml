<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyProfileFragment">

    <ImageView
        android:id="@+id/iv_my_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_my_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="프로필 수정"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_profile_title"
        android:layout_marginTop="72dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/iv_rate1_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_note" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray_500"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView" />

    <EditText
        android:id="@+id/et_my_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/bg_rectangle_signup"
        android:backgroundTint="@color/gray_500"
        android:hint="닉네임"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white"
        android:textColorHint="#A1A1A1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/tv_my_profile_name_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/et_my_profile_name"
        app:layout_constraintEnd_toStartOf="@id/TextView"/>
    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="/15"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/et_my_profile_name"
        app:layout_constraintEnd_toEndOf="@id/et_my_profile_name"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_my_profile2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="@color/gray_500"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_my_profile_name_count"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/et_my_profile_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:hint="자신을 소개해보세요."
            android:textColorHint="#A1A1A1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:singleLine="false"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/et_my_profile_name"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_my_profile_introduce_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/cv_my_profile2"
        app:layout_constraintEnd_toStartOf="@id/TextView2"/>
    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="/15"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/cv_my_profile2"
        app:layout_constraintEnd_toEndOf="@id/cv_my_profile2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정 완료"
        android:background="@drawable/bg_rectangle"
        app:layout_constraintTop_toBottomOf="@id/tv_my_profile_introduce_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>